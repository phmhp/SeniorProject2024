<robot name="my_robot">
  <!-- Material 정의 -->
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <!-- World link -->
  <link name="world"/>

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.46 0.38 0.9"/> <!-- 로봇 본체 -->
      </geometry>
      <material name="blue"/>
    </visual>
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.02"/> <!--화살표-->
      </geometry>
      <material name="red"/>
      <origin xyz="0.25 0 0.1" rpy="0 0 0"/> <!--로봇 앞쪽 화살표-->
    </visual>
  </link>

  <!-- Laser sensor -->
  <link name="laser">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/> <!-- 레이저 센서 -->
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Joints -->
  <!-- Base link와 world 간 고정 -->
  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/> <!-- 베이스 링크 높이 설정 -->
  </joint>

  <!-- Laser와 base_link 간 고정 -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0.25 0.0 0.09" rpy="0 0 0"/> <!-- 라이다의 물리적 위치 설정 -->
  </joint>
</robot>
