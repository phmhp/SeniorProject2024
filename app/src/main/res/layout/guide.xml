<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 로고 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/mdlogo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/md_logo" />

    <!-- 중간 배너 -->

    <!-- 안내 시작 텍스트 -->

    <LinearLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guideText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-175dp"
        android:layout_marginBottom="-2dp"
        android:background="#003087"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="600dp"
        android:paddingBottom="20dp"></LinearLayout>

    <TextView
        android:id="@+id/guideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로버로송과 함께 하는 안내를 시작합니다."
        android:layout_centerHorizontal="true"
        android:paddingTop="300dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- 안내 부가 텍스트 -->
    <TextView
        android:id="@+id/guideSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저를 따라오세요"
        android:layout_below="@id/guideText"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

    <!-- 로봇 아이콘 -->
    <ImageView
        android:id="@+id/robotIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:src="@drawable/robot1" />

    <!-- 안내 종료 버튼 (로봇 아이콘 바로 아래에 배치) -->
    <Button
        android:id="@+id/endGuideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안내중단"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:padding="12dp"
        android:elevation="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/robotIcon"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
