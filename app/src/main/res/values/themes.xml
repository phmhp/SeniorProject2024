<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Roverosong" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#E5EDF8</item>
        <item name="colorPrimaryVariant">#E5EDF8</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- 투명 -->
        <!-- 네비게이션 바 색상 (선택 사항) -->
        <item name="android:navigationBarColor">@android:color/transparent</item> <!-- 투명 -->
        <!-- 전체화면 모드 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
</resources>
